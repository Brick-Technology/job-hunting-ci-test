{
  "{{chrome}}.manifest_version": 3,
  "{{firefox}}.manifest_version": 2,
  "icons": {
    "16": "icons/16x16.png",
    "32": "icons/32x32.png",
    "48": "icons/48x48.png",
    "128": "icons/128x128.png"
  },
  "{{chrome}}.action": {
    "default_title": "Click to open admin page"
  },
  "{{firefox}}.browser_action": {
    "default_title": "Click to open admin page"
  },
  "background": {
    "{{chrome}}.service_worker": "src/background/index.ts",
    "{{firefox}}.scripts": ["src/background/indexFirefox.ts"]
  },
  "{{chrome}}.content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'"
  },
  "content_scripts": [
    {
      "js": ["src/contentScript/index.js"],
      "matches": [
        "https://www.zhipin.com/*",
        "https://sou.zhaopin.com/*",
        "https://we.51job.com/*",
        "https://www.lagou.com/*",
        "https://hk.jobsdb.com/*",
        "https://www.liepin.com/*",
        "https://aiqicha.baidu.com/*"
      ]
    }
  ],
  "{{chrome}}.web_accessible_resources": [
    {
      "resources": ["proxyAjax.js","style.css"],
      "matches": [
        "https://www.zhipin.com/*",
        "https://sou.zhaopin.com/*",
        "https://we.51job.com/*",
        "https://www.lagou.com/*",
        "https://hk.jobsdb.com/*",
        "https://www.liepin.com/*",
        "https://aiqicha.baidu.com/*"
      ]
    }
  ],
  "{{chrome}}.permissions": ["webRequest", "offscreen", "unlimitedStorage"],
  "{{firefox}}.permissions": [
    "https://www.zhipin.com/*",
    "https://sou.zhaopin.com/*",
    "https://jobs.zhaopin.com/*",
    "https://we.51job.com/*",
    "https://jobs.51job.com/*",
    "https://www.lagou.com/*",
    "https://hk.jobsdb.com/*",
    "https://kjxb.org/",
    "https://aiqicha.baidu.com/",
    "https://www.liepin.com/*",
    "https://*.chinaz.com/",
    "http://*/",
    "https://*/"
  ],
  "{{chrome}}.host_permissions": [
    "https://www.zhipin.com/*",
    "https://sou.zhaopin.com/*",
    "https://jobs.zhaopin.com/*",
    "https://we.51job.com/*",
    "https://jobs.51job.com/*",
    "https://www.lagou.com/*",
    "https://hk.jobsdb.com/*",
    "https://kjxb.org/",
    "https://aiqicha.baidu.com/",
    "https://www.liepin.com/*",
    "https://*.chinaz.com/",
    "http://*/",
    "https://*/"
  ]
}
